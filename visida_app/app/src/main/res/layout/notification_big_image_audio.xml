<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/notification_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_alignParentTop="true"
        style="@style/TextAppearance.Compat.Notification.Title.Media"
        />

    <TextView
        android:id="@+id/notification_txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:layout_below="@id/notification_txt_title"
        style="@style/TextAppearance.Compat.Notification.Info.Media"
        />

    <ImageView
        android:id="@+id/notification_img_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_below="@id/notification_txt_content"/>

    <ImageView
        android:id="@+id/imgHelp"
        android:layout_width="@dimen/icon_small_square"
        android:layout_height="@dimen/icon_small_square"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_btn_megaphone"
        android:elevation="1dp"
        android:layout_below="@id/notification_txt_content"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>